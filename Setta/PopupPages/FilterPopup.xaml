<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:models="clr-namespace:Setta.Models"
    x:Class="Setta.PopupPages.FilterPopup"
    Color="Transparent"
    VerticalOptions="End"
    HorizontalOptions="Fill">

    <Grid
        HorizontalOptions="Fill"
        VerticalOptions="End">
        <Border
            StrokeShape="RoundRectangle 10,10,0,0"
            Padding="20"
            HorizontalOptions="Fill"
            VerticalOptions="End"
            BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">

            <VerticalStackLayout Spacing="0">
                <!-- Ресурсы конвертера -->
                <VerticalStackLayout.Resources>
                    <ResourceDictionary>
                        <models:BoolToColorConverter x:Key="SelectedColorConverter" />
                    </ResourceDictionary>
                </VerticalStackLayout.Resources>

                <!-- Перетаскиватель -->
                <BoxView
                    HeightRequest="4"
                    WidthRequest="40"
                    CornerRadius="10"
                    HorizontalOptions="Center"
                    Margin="0,0,0,20"
                    BackgroundColor="{StaticResource Secondary}" />

                <!-- Заголовок -->
                <Label
                    Text="Фильтры"
                    Style="{StaticResource HeadlineLabel}"
                    Margin="0,0,0,20" />

                <!-- Основная группа мышц -->
                <Label
                    Text="Основная группа мышц"
                    Style="{StaticResource SecondaryLabel}"
                    Margin="0,0,0,10" />
                <ScrollView
                    Margin="0,0,0,20">
                    <FlexLayout
                        BindableLayout.ItemsSource="{Binding MuscleGroups}"
                        Wrap="Wrap"
                        Direction="Row"
                        JustifyContent="Start"
                        AlignItems="Start">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Text="{Binding Name}"
                                    Command="{Binding ToggleCommand}"
                                    BackgroundColor="{Binding IsSelected, Converter={StaticResource SelectedColorConverter}}"
                                    Margin="0,0,5,5"
                                    Padding="10,5"
                                    FontFamily="RubikRegular"
                                    HorizontalOptions="Start"
                                    FlexLayout.Basis="Auto" />
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </ScrollView>

                <!-- Оборудование -->
                <Label
                    Text="Оборудование"
                    Style="{StaticResource SecondaryLabel}"
                    Margin="0,0,0,10" />
                <ScrollView
                    Margin="0,0,0,20">
                    <FlexLayout
                        BindableLayout.ItemsSource="{Binding EquipmentFilters}"
                        Wrap="Wrap"
                        Direction="Row"
                        JustifyContent="Start"
                        AlignItems="Start">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Text="{Binding Name}"
                                    Command="{Binding ToggleCommand}"
                                    BackgroundColor="{Binding IsSelected, Converter={StaticResource SelectedColorConverter}}"
                                    Margin="0,0,5,5"
                                    Padding="10,5"
                                    FontFamily="RubikRegular"
                                    HorizontalOptions="Start"
                                    FlexLayout.Basis="Auto" />
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </ScrollView>

                <!-- Кнопки действия -->
                <Grid
                    ColumnDefinitions="*,*"
                    ColumnSpacing="10">
                    <Button
                        Grid.Column="0"
                        Text="Сбросить"
                        Command="{Binding ResetCommand}"
                        BackgroundColor="{AppThemeBinding Light={StaticResource LightElement},Dark={StaticResource DarkElement}}"
                        HeightRequest="50"
                        HorizontalOptions="Fill" />
                    <Button
                        Grid.Column="1"
                        Text="Применить"
                        Clicked="OnApplyTapped"
                        BackgroundColor="{StaticResource Important}"
                        TextColor="{StaticResource DarkText}"
                        HeightRequest="50"
                        HorizontalOptions="Fill" />
                </Grid>
            </VerticalStackLayout>
        </Border>
    </Grid>
</toolkit:Popup>