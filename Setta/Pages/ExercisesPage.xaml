<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Setta.Models"
    x:Class="Setta.Pages.ExercisesPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <models:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*" Padding="20">

        <!-- Заголовок -->
        <Label Grid.Row="0"
               Text="Упражнения"
               Style="{StaticResource HeadlineLabel}"
               Margin="0,0,0,20" />

        <!-- Поисковая строка и кнопки -->
        <Grid Grid.Row="1"
              ColumnDefinitions="*,Auto,Auto"
              HeightRequest="40"
              Margin="0,0,0,20">

            <Frame Grid.Column="0"
                   CornerRadius="10"
                   Padding="10,0"
                   HeightRequest="40"
                   HorizontalOptions="Fill">
                <Grid ColumnDefinitions="Auto,10,*" VerticalOptions="Center" HeightRequest="40">
                    <Image Source="search.svg"
                           WidthRequest="20"
                           HeightRequest="20"
                           VerticalOptions="Center" />
                    <Entry Grid.Column="2"
                           Placeholder="Поиск"
                           Text="{Binding SearchQuery}" />
                </Grid>
            </Frame>

            <Frame Grid.Column="1"
                   CornerRadius="10"
                   HeightRequest="40"
                   WidthRequest="40"
                   Margin="10,0,0,0"
                   VerticalOptions="Center">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnFilterClicked" />
                </Frame.GestureRecognizers>
                <Image Source="filter.svg"
                       HeightRequest="20"
                       WidthRequest="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>

            <Frame Grid.Column="2"
                   CornerRadius="10"
                   HeightRequest="40"
                   WidthRequest="40"
                   Margin="10,0,0,0"
                   Background="{StaticResource Important}"
                   VerticalOptions="Center">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAddExerciseClicked" />
                </Frame.GestureRecognizers>
                <Image Source="plus.svg"
                       HeightRequest="20"
                       WidthRequest="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>
        </Grid>

        <!-- Список упражнений -->
        <CollectionView
            Grid.Row="2"
            ItemsSource="{Binding Exercises}"
            SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="Auto,Auto" Padding="0,5">
                        <StackLayout Grid.Row="0" Spacing="2">
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnExerciseTapped" />
                            </StackLayout.GestureRecognizers>

                            <Label Text="{Binding ExerciseName}" FontSize="16" />
                            <Label Text="{Binding MuscleGroup}" Style="{StaticResource SecondarySmallLabel}" />
                        </StackLayout>

                        <BoxView
                            Grid.Row="1"
                            HeightRequest="1"
                            Color="{AppThemeBinding Light={StaticResource LightElement}, Dark={StaticResource DarkElement}}"
                            HorizontalOptions="Fill"
                            Margin="0,10,0,0"
                            CornerRadius="10"
                            IsVisible="{Binding IsLastItem, Converter={StaticResource InverseBoolConverter}}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
