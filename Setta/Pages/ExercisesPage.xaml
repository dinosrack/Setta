<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Setta.Models"
             x:Class="Setta.Pages.ExercisesPage">

    <Shell.TitleView>
        <Grid Padding="5">
            <Label Text="Упражнения"
                   Style="{StaticResource HeadlineLabel}" />
        </Grid>
    </Shell.TitleView>

    <!-- Использование конвертера для определения последнего элемента -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <models:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*" Padding="20,0,20,20">
        <!-- Первая строка: поиск + кнопки -->
        <Grid ColumnDefinitions="*,Auto,Auto" HeightRequest="40" VerticalOptions="Start">
            <!-- Поле поиска -->
            <Frame Grid.Column="0"
                   CornerRadius="10"
                   Padding="10,0"
                   HeightRequest="40"
                   HorizontalOptions="Fill">
                <Grid ColumnDefinitions="Auto,10,*" VerticalOptions="Center" HeightRequest="40">
                    <Image Source="search.svg"
                           WidthRequest="20"
                           HeightRequest="20"
                           VerticalOptions="Center" />
                    <Entry Grid.Column="2"
                           Placeholder="Поиск"
                           Text="{Binding SearchQuery}" />
                </Grid>
            </Frame>

            <!-- Кнопка фильтра -->
            <Frame Grid.Column="1"
                   CornerRadius="10"
                   HeightRequest="40"
                   WidthRequest="40"
                   Margin="10,0,0,0"
                   VerticalOptions="Center">
                <ImageButton Source="filter.svg"
                             HeightRequest="20"
                             WidthRequest="20"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Clicked="OnFilterClicked"/>
            </Frame>

            <!-- Кнопка создания упражнения -->
            <Frame Grid.Column="2"
                   CornerRadius="10"
                   HeightRequest="40"
                   WidthRequest="40"
                   Margin="10,0,0,0"
                   Background="{StaticResource Important}"
                   VerticalOptions="Center">
                <ImageButton Source="plus.svg"
                             HeightRequest="20"
                             WidthRequest="20"
                             HorizontalOptions="Center"
                             VerticalOptions="Center" />
            </Frame>
        </Grid>

        <!-- Вторая строка: список упражнений -->
        <CollectionView Grid.Row="1"
                ItemsSource="{Binding Exercises}"
                Margin="0,10,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Spacing="2" Padding="0,5">
                        <Label Text="{Binding ExerciseName}" FontSize="16"/>
                        <Label Text="{Binding MuscleGroup}" Style="{StaticResource SecondarySmallLabel}" />

                        <BoxView HeightRequest="1"
                         Color="{AppThemeBinding Light={StaticResource LightElement}, Dark={StaticResource DarkElement}}"
                         HorizontalOptions="Fill" 
                         Margin="0,10,0,0"
                         CornerRadius="10"
                         IsVisible="{Binding IsLastItem, Converter={StaticResource InverseBoolConverter}}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>
