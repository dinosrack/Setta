<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Setta.Pages.ExercisesPage">

    <Shell.TitleView>
        <Grid Padding="5">
            <Label Text="Упражнения"
                   Style="{StaticResource Headline}" />
        </Grid>
    </Shell.TitleView>

    <Grid>
        <ScrollView>
            <StackLayout Padding="20,0,20,20">
                <Grid ColumnDefinitions="*,Auto,Auto" HeightRequest="40">
                    <!-- Поле поиска -->
                    <Frame Grid.Column="0"
                           CornerRadius="10"
                           Padding="10,0"
                           HeightRequest="40"
                           HorizontalOptions="Fill">
                        <Grid ColumnDefinitions="Auto,10,*" VerticalOptions="Center" HeightRequest="40">
                            <Image Source="search.svg"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   VerticalOptions="Center" />
                            <Entry Grid.Column="2"
                                   Placeholder="Поиск"
                                   Text="{Binding SearchQuery}" />
                        </Grid>
                    </Frame>

                    <!-- Кнопка фильтра -->
                    <Frame Grid.Column="1"
                           CornerRadius="10"
                           HeightRequest="40"
                           WidthRequest="40"
                           Margin="10,0,0,0"
                           VerticalOptions="Center">
                        <ImageButton Source="filter.svg"
                                     HeightRequest="20"
                                     WidthRequest="20"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center" />
                    </Frame>

                    <!-- Кнопка создания упражнения -->
                    <Frame Grid.Column="2"
                           CornerRadius="10"
                           HeightRequest="40"
                           WidthRequest="40"
                           Margin="10,0,0,0"
                           Background="#31BF6A"
                           VerticalOptions="Center">
                        <ImageButton Source="plus.svg"
                                     HeightRequest="20"
                                     WidthRequest="20"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center" />
                    </Frame>
                </Grid>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>