<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Setta.Pages.WorkoutInfoPage"
    xmlns:vm="clr-namespace:Setta.ViewModels"
    Padding="20"
    Shell.TabBarIsVisible="False">

    <ContentPage.BindingContext>
        <!-- BindingContext будет устанавливаться из code-behind через конструктор -->
    </ContentPage.BindingContext>

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="20">
        <!-- Заголовок и Назад -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
            <Label Text="Тренировка"
                   Style="{StaticResource HeadlineLabel}"
                   VerticalOptions="Center"/>
            <Label Grid.Column="1"
                   Text="Назад"
                   VerticalOptions="Center"
                   HorizontalOptions="End"
                   Padding="0,0,10,0">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackTapped" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- Статус и время -->
        <VerticalStackLayout Grid.Row="1" Spacing="10">
            <Frame IsVisible="{Binding IsActive}"
                   BackgroundColor="{StaticResource Green}"
                   CornerRadius="10"
                   Padding="0"
                   HeightRequest="30"
                   HorizontalOptions="Fill">
                <Label Text="В процессе" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White"/>
            </Frame>
            <Label IsVisible="{Binding IsNotActive}"
                   Text="{Binding DateTimePeriod}"
                   Style="{StaticResource SecondaryLabel}"/>
            <Grid IsVisible="{Binding IsNotActive}" ColumnDefinitions="*,*">
                <Frame Padding="0" CornerRadius="10" BackgroundColor="{AppThemeBinding Light={StaticResource LightElement}, Dark={StaticResource DarkElement}}">
                    <Label Text="{Binding TotalWeight, StringFormat='{0} кг'}" HorizontalOptions="Center"/>
                </Frame>
                <Frame Padding="0" CornerRadius="10" BackgroundColor="{AppThemeBinding Light={StaticResource LightElement}, Dark={StaticResource DarkElement}}" Grid.Column="1">
                    <Label Text="{Binding TotalDuration}" HorizontalOptions="Center"/>
                </Frame>
            </Grid>
        </VerticalStackLayout>

        <!-- Список упражнений -->
        <VerticalStackLayout Grid.Row="2" Spacing="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Text="*"
                    Style="{StaticResource SecondaryLabel}"
                    TextColor="{StaticResource Red}"
                    Grid.Column="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Margin="0,-5,5,0" />
                <Label
                    Text="Список упражнений"
                    Style="{StaticResource SecondaryLabel}"    
                    Grid.Column="1"
                    Margin="0,0,0,10" />
            </Grid>
            <CollectionView ItemsSource="{Binding Exercises}" SelectionMode="None" x:Name="ExercisesView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Padding="10"
                            Margin="0,0,0,10"
                            BackgroundColor="{AppThemeBinding Light={StaticResource LightElement}, Dark={StaticResource DarkElement}}"
                            CornerRadius="10"
                            HasShadow="False">
                            <Grid ColumnDefinitions="*,Auto"
                                  RowDefinitions="Auto,Auto"
                                  Padding="5,0,0,0">
                                <Label Text="{Binding Exercise.ExerciseName}" Grid.Row="0" Grid.Column="0" />
                                <Label Text="{Binding Exercise.MuscleGroup}" Style="{StaticResource SecondarySmallLabel}" Grid.Row="1" Grid.Column="0" />
                                <Image Source="arrowdown.svg"
                                       WidthRequest="16"
                                       HeightRequest="16"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"
                                       Grid.RowSpan="2"
                                       Grid.Column="1"/>
                                <!-- По тапу редактируем подходы только если тренировка активна -->
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnExerciseTapped" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="Добавить упражнение"
                    Command="{Binding AddExerciseCommand}"
                    BackgroundColor="{AppThemeBinding Light={StaticResource LightElement}, Dark={StaticResource DarkElement}}"
                    HeightRequest="50"
                    IsVisible="{Binding IsActive}"/>
        </VerticalStackLayout>

        <!-- Нижние кнопки -->
        <Grid Grid.Row="3" ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Grid.ColumnSpan="2"
                    IsVisible="{Binding IsActive}"
                    Text="Завершить тренировку"
                    Command="{Binding CompleteOrCancelCommand}"
                    BackgroundColor="{StaticResource Green}"
                    HeightRequest="50"/>
        </Grid>
    </Grid>
</ContentPage>
