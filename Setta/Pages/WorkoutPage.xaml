<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Setta.Pages.WorkoutPage"
             Padding="20">
    <VerticalStackLayout Spacing="20">
        
        <Label Text="Тренировки" 
               Style="{StaticResource HeadlineLabel}"/>

        <Button
            Text="Записать тренировку"
            BackgroundColor="{StaticResource Important}"
            TextColor="White"
            HeightRequest="50"
            Clicked="OnAddWorkoutClicked"/>

        <Label
            Text="У вас еще не записаны тренировки"
            x:Name="NoWorkoutLabel"
            Style="{StaticResource SecondaryLabel}"
            HorizontalOptions="Center"
            IsVisible="False"/>

        <CollectionView
                    x:Name="WorkoutView"
                    IsVisible="False">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Padding="10"
                        Margin="0,0,0,10"
                        BackgroundColor="{AppThemeBinding Light={StaticResource LightElement}, Dark={StaticResource DarkElement}}"
                        CornerRadius="10"
                        HasShadow="False">

                        <Grid ColumnDefinitions="*,Auto" Padding="5,0,0,0">

                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer
                                            Command="{Binding Source={x:Reference PageRoot}, Path=TemplateTapCommand}"
                                            CommandParameter="{Binding}" />
                            </Grid.GestureRecognizers>

                            <!-- Название шаблона + упражнения -->
                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                <Label Text="{Binding Name}"/>
                                <Label Text="{Binding ExerciseNames}" Style="{StaticResource SecondarySmallLabel}" />
                            </VerticalStackLayout>

                            <!-- Стрелка -->
                            <Image Source="arrowright.svg"
                                           WidthRequest="16"
                                           HeightRequest="16"
                                           VerticalOptions="Center"
                                           HorizontalOptions="End"
                                           Grid.Column="1"
                                           Margin="10,0,0,0"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </VerticalStackLayout>
</ContentPage>