<?xml version="1.0" encoding="UTF-8" ?>
<Application 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Setta"
    xmlns:models="clr-namespace:Setta.Models"
    xmlns:converters="clr-namespace:Setta.Converters"
    x:Class="Setta.App">

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <models:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:EnumerableNotEmptyConverter x:Key="EnumerableNotEmptyConverter"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
