<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Setta.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Setta"
    xmlns:pages="clr-namespace:Setta.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Setta">

    <TabBar>
        <ShellContent 
            Icon="calendar.svg"
            ContentTemplate="{DataTemplate pages:WorkoutPage}"/>

        <ShellContent 
            Icon="template.svg"
            ContentTemplate="{DataTemplate pages:TemplatePage}" />

        <ShellContent 
            Icon="exercise.svg"
            ContentTemplate="{DataTemplate pages:ExercisesPage}" />

        <ShellContent 
            Icon="results.svg"
            ContentTemplate="{DataTemplate pages:ResultsPage}" />

        <ShellContent 
            Icon="settings.svg"
            ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </TabBar>
</Shell>
