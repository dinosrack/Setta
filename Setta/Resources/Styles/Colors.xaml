<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- Тёмная тема -->
    <Color x:Key="DarkBackground">#202020</Color>
    <Color x:Key="DarkElement">#282828</Color>
    <Color x:Key="DarkText">#FFFFFF</Color>

    <!-- Светлая тема -->
    <Color x:Key="LightBackground">#FFFFFF</Color>
    <Color x:Key="LightElement">#EDEDED</Color>
    <Color x:Key="LightText">#202020</Color>

    <!--Палитра обоих тем-->
    <Color x:Key="Important">#31BF6A</Color>
    <Color x:Key="Secondary">#808080</Color>
</ResourceDictionary>